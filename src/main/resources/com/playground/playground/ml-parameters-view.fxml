        </Menu>
        <Menu text="Activation">
            <MenuItem fx:id="reLu" onAction="#handleActivation" text="ReLU" />
            <MenuItem fx:id="tanH" onAction="#handleActivation" text="Tanh" />
            <MenuItem fx:id="sigmoid" onAction="#handleActivation" text="Sigmoid" />
            <MenuItem fx:id="linear" onAction="#handleActivation" text="Linear" />
