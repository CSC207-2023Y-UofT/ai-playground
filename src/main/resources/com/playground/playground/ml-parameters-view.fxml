            <MenuItem onAction="#handleLearn" text="0.003" />
            <MenuItem onAction="#handleLearn" text="0.01" />
            <MenuItem onAction="#handleLearn" text="0.03" />
            <MenuItem onAction="#handleLearn" text="0.1" />
            <MenuItem onAction="#handleLearn" text="0.3" />
