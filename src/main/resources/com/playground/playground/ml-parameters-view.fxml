            <MenuItem text="Classification" />
            <MenuItem text="Regression" />
        </Menu>
        <HBox.margin>
            <Insets left="80.0" />
        </HBox.margin>
        <cursor>
            <Cursor fx:constant="NONE" />
        </cursor>
