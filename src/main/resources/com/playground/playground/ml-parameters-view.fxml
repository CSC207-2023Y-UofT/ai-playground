        <Menu text="Regularization">
            <MenuItem text="None" />
            <MenuItem text="L1" />
            <MenuItem text="L2" />
        </Menu>
        <Menu text="Regularization Rate">
            <MenuItem onAction="#handleLearn" text="0" />
