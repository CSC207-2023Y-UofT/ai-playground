<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox prefHeight="68.0" prefWidth="1005.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.playground.playground.MlParametersController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Button fx:id="rewindButton" onAction="#handleStopButtonClick" styleClass="circle-button">
        <HBox.margin>
            <Insets left="10.0" />
        </HBox.margin></Button>
    <Button fx:id="playButton" onAction="#handlePlayButtonClick" styleClass="circle-button">
        <HBox.margin>
            <Insets left="10.0" />
        </HBox.margin></Button>
    <Button fx:id="stepButton" styleClass="circle-button">
        <HBox.margin>
            <Insets left="10.0" />
        </HBox.margin></Button>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Epoch" translateX="25.0" translateY="5.0">
      <font>
         <Font size="18.0" />
      </font>
   </Text>
   <Text fx:id="epochNumber" strokeType="OUTSIDE" strokeWidth="0.0" text="0" textAlignment="CENTER" translateX="50.0" translateY="8.0" wrappingWidth="73.095703125" />

    <MenuBar prefHeight="28.0" prefWidth="651.0" translateX="-10.0">
        <Menu text="Learning Rate">
            <MenuItem fx:id="learn1" onAction="#handleLearningRate" text="0.00001" />
            <MenuItem fx:id="learn2" onAction="#handleLearningRate" text="0.00001" />
            <MenuItem fx:id="learn3" onAction="#handleLearningRate" text="0.0001" />
            <MenuItem fx:id="learn4" onAction="#handleLearningRate" text="0.001" />
            <MenuItem fx:id="learn5" onAction="#handleLearningRate" text="0.003" />
            <MenuItem fx:id="learn6" onAction="#handleLearningRate" text="0.01" />
            <MenuItem fx:id="learn7" onAction="#handleLearningRate" text="0.03" />
            <MenuItem fx:id="learn8" onAction="#handleLearningRate" text="0.1" />
            <MenuItem fx:id="learn9" onAction="#handleLearningRate" text="0.3" />
            <MenuItem fx:id="learn10" onAction="#handleLearningRate" text="1" />
            <MenuItem fx:id="learn11" onAction="#handleLearningRate" text="3" />
            <MenuItem fx:id="learn12" onAction="#handleLearningRate" text="10" />
        </Menu>
        <Menu text="Activation">
            <MenuItem fx:id="reLu" onAction="#handleActivation" text="ReLU" />
            <MenuItem fx:id="tanH" onAction="#handleActivation" text="Tanh" />
            <MenuItem fx:id="sigmoid" onAction="#handleActivation" text="Sigmoid" />
            <MenuItem fx:id="softMax" onAction="#handleActivation" text="SoftMax" />
        </Menu>
        <Menu text="Regularization">
            <MenuItem fx:id="none" onAction="#handleRegularization" text="None" />
            <MenuItem fx:id="l1" onAction="#handleRegularization" text="L1" />
            <MenuItem fx:id="l2" onAction="#handleRegularization" text="L2" />
        </Menu>
        <Menu text="Regularization Rate">
            <MenuItem fx:id="reg1" onAction="#handleRegularizationRate" text="0" />
            <MenuItem fx:id="reg2" onAction="#handleRegularizationRate" text="0.001" />
            <MenuItem fx:id="reg3" onAction="#handleRegularizationRate" text="0.003" />
            <MenuItem fx:id="reg4" onAction="#handleRegularizationRate" text="0.01" />
            <MenuItem fx:id="reg5" onAction="#handleRegularizationRate" text="0.03" />
            <MenuItem fx:id="reg6" onAction="#handleRegularizationRate" text="0.1" />
            <MenuItem fx:id="reg7" onAction="#handleRegularizationRate" text="0.3" />
            <MenuItem fx:id="reg8" onAction="#handleRegularizationRate" text="1" />
            <MenuItem fx:id="reg9" onAction="#handleRegularizationRate" text="3" />
            <MenuItem fx:id="reg10" onAction="#handleRegularizationRate" text="10" />
        </Menu>
        <Menu text="Problem Type">
            <MenuItem fx:id="classify" onAction="#handleProblem" text="Classification" />
            <MenuItem fx:id="regress" onAction="#handleProblem" text="Regression" />
        </Menu>
        <HBox.margin>
            <Insets left="80.0" />
        </HBox.margin>
        <cursor>
            <Cursor fx:constant="NONE" />
        </cursor>
    </MenuBar>

</HBox>
